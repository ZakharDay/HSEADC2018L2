<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Middle name</th>
      <th>Facebook</th>
      <th>Instagram</th>
      <th>Vkontakte</th>
      <th>Youtube</th>
      <th>Hse portfolio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.user.email %></td>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.middle_name %></td>
        <td><%= student.facebook %></td>
        <td><%= student.instagram %></td>
        <td><%= student.vkontakte %></td>
        <td><%= student.youtube %></td>
        <td><%= student.hse_portfolio %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) if current_user && student.user_id == current_user.id %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } if current_user && student.user_id == current_user.id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

